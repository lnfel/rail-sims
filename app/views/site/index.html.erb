<div class="flex min-h-screen content-center justify-center">
  <div class="w-full min-h-0 lg:w-4/12 bg-white px-16 py-4">
    <%= image_tag("logo", class: 'mx-auto', width: '200px') %>
    <div class="mx-auto sm:w-3/4 lg:w-full">
      <h1 class="text-2xl mt-4">Welcome to MyPortal</h1>
      <span class="text-gray-500">Before you get started, you must login your account.</span>

      <form>
        <div class="mb-6 mt-10">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
            Username
          </label>
          <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:border-blue-600" id="username" name="username" type="text" placeholder="Username">
        </div>
        <!--  -->
        <div class="mb-6">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
            Password
          </label>
          <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:border-blue-600" id="password" type="password" placeholder="Password">
          <!-- <p class="text-red-500 text-xs italic">Please choose a password.</p> -->
        </div>
        <!--  -->
        <div class="mb-6">
          <div class="md:w-1/3"></div>
          <div class="md:w-2/3 block text-gray-500 font-bold custom-control custom-checkbox">
            <input id="remember" class="custom-control-input mr-2 leading-tight" type="checkbox" style="position: absolute; z-index: -1; opacity: 0;">
            <label for="remember" class="text-sm relative custom-control-label" style="margin-bottom: 0; vertical-align: top; display: inline-block;">Remember me</label>
          </div>
        </div>
        <!--  -->
        <div class="flex items-center justify-between mb-6">
          <div class="">
            <a href="#" class="text-sm text-indigo-500 hover:text-indigo-700">Forgot Password?</a>
          </div>
          <div class="">
            <button class="shadow bg-purple-500 hover:bg-purple-700 focus:border-purple-600 text-white py-2 px-6 rounded" type="button">
              Login
            </button>
          </div>
        </div>
        <p class="text-center text-sm mb-16">Don't have an account? <a href="#" class="text-indigo-500 hover:text-indigo-700">Create one</a></p>
        <p class="text-center text-xs mb-2">Copyright &copy; MyPortal</p>
        <div class="flex justify-center text-xs">
          <a href="#" class="text-indigo-500 hover:text-indigo-700">Privacy Policy</a>
          <i class="mx-3">â€¢</i>
          <a href="#" class="text-indigo-500 hover:text-indigo-700">Terms of Service</a>
        </div>
      </form>

    </div>
  </div>
  <div class="background-walk-y relative overlay-gradient-bottom hidden lg:block w-8/12 bg-gray-500">
    <div class="absolute left-0 bottom-0 p-12 text-white z-10">
      <h1 class="text-6xl font-bold">Good Morning</h1>
      <p class="text-2xl mb-20">Manila, Philippines</p>
      <p class="text-base mb-2">Copyright &copy; <a href="#" class="border-b-2 border-indigo-400 hover:border-indigo-600">MyPortal</a></p>
    </div>
  </div>
</div>

